---
const path = Astro.url.pathname;
const isEn = path.startsWith('/en');
const prefix = isEn ? '/en' : '';

// Handle language switching for job detail pages
let toJaPath = path;
let toEnPath = path;

if (path.includes('/jobs/')) {
  const slug = path.split('/jobs/')[1];
  if (isEn) {
    // From English to Japanese: remove /en prefix and keep the same slug
    toJaPath = `/jobs/${slug}`;
  } else {
    // From Japanese to English: add /en prefix and keep the same slug
    toEnPath = `/en/jobs/${slug}`;
  }
} else {
  // Non-job pages: simple prefix handling
  toJaPath = isEn ? path.replace(/^\/en(?=\/|$)/, '') : path;
  if (toJaPath === '') toJaPath = '/';
  toEnPath = isEn ? path : `/en${path}`;
}

const currentLang = isEn ? 'en' : 'ja';
---
<header class="header-sticky">
  <div class="header-background"></div>
  <nav class="header-nav">
    <div class="header-left">
      <a href={isEn ? '/en' : '/'} class="logo-link">
        <img src="/favicon.svg" alt="NanoFrontier" class="logo-icon" />
        <span class="logo-text">{currentLang==='en' ? 'NanoFrontier Careers' : 'NanoFrontier 採用'}</span>
      </a>
    </div>
    
    <div class="header-right">
      <a href={`${prefix}/jobs`} class="nav-link" aria-current={Astro.url.pathname.includes('/jobs') ? 'page' : undefined}>
        <span class="nav-link-text">{currentLang==='en' ? 'Jobs' : '募集一覧'}</span>
        <div class="nav-link-underline"></div>
      </a>
      
      <div class="language-switcher">
        <a href={toJaPath || '/'} class={currentLang==='ja' ? 'active' : ''}>日本語</a>
        <a href={toEnPath} class={currentLang==='en' ? 'active' : ''}>English</a>
      </div>
    </div>
  </nav>
</header>

<style>
  .header-sticky {
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .header-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.95) 100%);
    border-bottom: 1px solid rgba(229, 231, 235, 0.6);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08), 0 1px 3px rgba(0, 0, 0, 0.04);
  }

  .header-nav {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 72px;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header-left {
    display: flex;
    align-items: center;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    font-weight: 700;
    color: #1f2937;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 0.5rem;
    border-radius: 0.75rem;
  }

  .logo-link:hover {
    transform: translateY(-1px);
    color: var(--nf-color-brand);
  }

  .logo-icon {
    width: 24px;
    height: 24px;
  }

  .logo-text {
    font-size: 1.25rem;
    background: linear-gradient(135deg, #1f2937 0%, var(--nf-color-brand) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-link {
    position: relative;
    text-decoration: none;
    color: #374151;
    font-weight: 600;
    padding: 0.75rem 1.25rem;
    border-radius: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .nav-link:hover {
    background: linear-gradient(135deg, rgba(4, 102, 108, 0.05) 0%, rgba(13, 148, 136, 0.05) 100%);
    color: var(--nf-color-brand);
    transform: translateY(-1px);
  }

  .nav-link[aria-current="page"] {
    background: linear-gradient(135deg, var(--nf-color-brand) 0%, #0d9488 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(4, 102, 108, 0.3);
  }

  .nav-link-underline {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--nf-color-brand) 0%, #0d9488 100%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
  }

  .nav-link:hover .nav-link-underline {
    width: 80%;
  }

  .language-switcher {
    display: flex;
    background: rgba(248, 250, 252, 0.8);
    border: 1px solid rgba(229, 231, 235, 0.6);
    border-radius: 0.75rem;
    padding: 0.25rem;
    gap: 0.25rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .language-switcher a {
    text-decoration: none;
    color: #6b7280;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 0.875rem;
  }

  .language-switcher a:hover {
    color: var(--nf-color-brand);
    background: rgba(4, 102, 108, 0.05);
  }

  .language-switcher a.active {
    background: linear-gradient(135deg, var(--nf-color-brand) 0%, #0d9488 100%);
    color: white;
    box-shadow: 0 2px 8px rgba(4, 102, 108, 0.2);
  }

  /* レスポンシブ対応 */
  @media (max-width: 1024px) {
    .header-nav {
      padding: 0 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .header-nav {
      padding: 0 1.25rem;
      height: 64px;
    }

    .header-right {
      gap: 1.5rem;
    }

    .logo-text {
      font-size: 1.125rem;
    }

    .nav-link {
      padding: 0.625rem 1rem;
      font-size: 0.875rem;
    }

    .language-switcher a {
      padding: 0.375rem 0.75rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 640px) {
    .header-nav {
      padding: 0 1rem;
      height: 60px;
    }

    .header-right {
      gap: 1rem;
    }

    .logo-text {
      font-size: 1rem;
    }

    .logo-icon {
      width: 20px;
      height: 20px;
    }

    .nav-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.8rem;
    }

    .language-switcher {
      padding: 0.125rem;
      gap: 0.125rem;
    }

    .language-switcher a {
      padding: 0.375rem 0.625rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .header-nav {
      padding: 0 0.75rem;
      height: 56px;
    }

    .header-right {
      gap: 0.75rem;
    }

    .logo-text {
      font-size: 0.9rem;
    }

    .logo-icon {
      width: 18px;
      height: 18px;
    }

    .nav-link {
      padding: 0.375rem 0.5rem;
      font-size: 0.75rem;
    }

    .language-switcher {
      padding: 0.125rem;
      gap: 0.125rem;
    }

    .language-switcher a {
      padding: 0.25rem 0.5rem;
      font-size: 0.7rem;
    }
  }

  @media (max-width: 360px) {
    .header-nav {
      padding: 0 0.5rem;
      height: 52px;
    }

    .logo-text {
      display: none;
    }

    .header-right {
      gap: 0.5rem;
    }

    .nav-link {
      padding: 0.25rem 0.375rem;
      font-size: 0.7rem;
    }

    .language-switcher a {
      padding: 0.25rem 0.375rem;
      font-size: 0.65rem;
    }
  }
</style>


