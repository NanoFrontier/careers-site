---
const {
  title,
  subtitle,
  primaryHref,
  primaryLabel,
  secondaryHref,
  secondaryLabel
} = Astro.props as {
  title: string;
  subtitle?: string;
  primaryHref?: string; primaryLabel?: string;
  secondaryHref?: string; secondaryLabel?: string;
};
---
<section class="surface full-bleed gradient-hero" style="border-bottom:1px solid var(--nf-color-border);margin-top:calc(var(--nf-space-8) * -1)">
  <div class="container hero-container">
    <h1 class="heading-hero">{title}</h1>
    {subtitle && <p class="muted hero-subtitle">{subtitle}</p>}
    {(primaryHref || secondaryHref) && (
      <div class="hero-buttons">
        {primaryHref && <a class="btn" href={primaryHref}>{primaryLabel}</a>}
        {secondaryHref && <a class="btn-outline" href={secondaryHref}>{secondaryLabel}</a>}
      </div>
    )}
  </div>
</section>

<style>
  .hero-container {
    padding: var(--nf-space-12) var(--nf-space-6) var(--nf-space-8);
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
  }

  .heading-hero {
    font-size: clamp(2.4rem, 5vw, 3.6rem);
    line-height: 1.1;
    margin: 0 0 var(--nf-space-3);
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    max-width: 60ch;
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .hero-buttons {
    margin-top: var(--nf-space-4);
    display: flex;
    gap: var(--nf-space-3);
    flex-wrap: wrap;
    align-items: center;
  }

  /* モバイル対応 */
  @media (max-width: 768px) {
    .hero-container {
      padding: var(--nf-space-8) var(--nf-space-4) var(--nf-space-6);
    }

    .heading-hero {
      font-size: clamp(2rem, 8vw, 2.8rem);
    }

    .hero-subtitle {
      font-size: 1rem;
      max-width: 100%;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: stretch;
      gap: var(--nf-space-2);
    }

    .hero-buttons .btn,
    .hero-buttons .btn-outline {
      text-align: center;
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .hero-container {
      padding: var(--nf-space-6) var(--nf-space-3) var(--nf-space-4);
    }

    .heading-hero {
      font-size: clamp(1.8rem, 10vw, 2.4rem);
    }
  }
</style>


