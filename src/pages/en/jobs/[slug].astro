---
import Layout from "../../../layouts/DefaultLayout.astro";
import { getCollection } from "astro:content";
import { toJobPosting } from "../../../lib/jobPosting";

export async function getStaticPaths(){
  const entries = await getCollection('jobs');
  const enEntries = entries.filter(e => e.id.startsWith('en/'));
  
  const paths = [];
  for (const entry of enEntries) {
    // Extract slug without 'en/' prefix and '.mdx' extension
    const slug = entry.id.replace('en/', '').replace('.mdx', '');
    paths.push({ params: { slug }, props: { entry } });
  }
  
  return paths;
}

const { entry } = Astro.props as { entry: any };
const { Content } = await entry.render();
const job = { ...entry.data };

// Extract slug from entry.id
const slug = entry.id.replace('en/', '').replace('.mdx', '');

const jsonLd = toJobPosting(job);
const canonical = `https://careers.nanofrontier.jp/en/jobs/${slug}`;
---
<Layout title={`${job.title} | NanoFrontier`} description={job.description} {canonical} jsonLd={jsonLd}>
  <section class="container job-detail-section">
    <!-- Back to List Button -->
    <div class="back-button-container">
      <a href="/en/jobs" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"/>
        </svg>
        Back to List
      </a>
    </div>
    
    <!-- Job Detail Content -->
    <article class="md-content job-content">
      <h2 class="job-title">{job.title}</h2>
      <div class="md-body"><Content /></div>
    </article>
    
    <!-- Apply Form (at bottom) -->
    <aside class="apply-form-section" id="apply-form">
      <div class="card apply-form-card">
        <h3 class="apply-form-title">Apply</h3>
        <p class="muted apply-form-description">You can apply directly using the form below.</p>
        <iframe src="https://juicy-brazil-90f.notion.site/ebd/25d26dc08b4b81d89b5dcaf69ee26f28" width="100%" height="600" frameborder="0" allowfullscreen class="apply-form-iframe"></iframe>
      </div>
    </aside>
  </section>

  <!-- Floating Action Button -->
  <div class="fab-container center">
    <button class="fab-button" id="fab-button">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
      </svg>
      <span class="fab-text">Apply Now</span>
    </button>
  </div>
</Layout>

<script>
  function openApplyForm() {
    console.log('FAB button clicked');
    
    // Google Analytics トラッキング
    if (typeof (window as any).trackJobApply === 'function') {
      (window as any).trackJobApply(document.querySelector('.job-title')?.textContent || '', 'job', 'fab_button');
    }
    
    // 応募フォームセクションをIDで探す
    const applyFormSection = document.getElementById('apply-form');
    if (applyFormSection) {
      console.log('Apply form section found, scrolling...');
      
      // 応募フォームまでスクロール
      applyFormSection.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'start',
        inline: 'nearest'
      });
      
      // 少し待ってからiframeにフォーカスを試行
      setTimeout(() => {
        const iframe = document.querySelector('.apply-form-iframe') as HTMLIFrameElement;
        if (iframe) {
          try {
            iframe.focus();
            console.log('iframe focused');
          } catch (e) {
            console.log('iframe focus failed:', e);
          }
        }
      }, 800);
    } else {
      console.log('Apply form section not found');
    }
  }

  // DOMが読み込まれた後にイベントリスナーを設定
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, setting up FAB button');
    
    // Google Analytics でページビューをトラッキング
    if (typeof (window as any).trackJobView === 'function') {
      (window as any).trackJobView(document.querySelector('.job-title')?.textContent || '', 'job');
    }
    
    const fabButton = document.getElementById('fab-button');
    if (fabButton) {
      fabButton.addEventListener('click', openApplyForm);
      console.log('FAB button event listener added');
    } else {
      console.log('FAB button not found');
    }
  });
</script>

<style>
  .job-detail-section {
    padding: var(--nf-space-8) 0;
  }

  .back-button-container {
    margin-bottom: var(--nf-space-6);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--nf-space-2);
    color: var(--nf-color-muted);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--nf-color-fg);
  }

  .job-content {
    line-height: 1.85;
    margin-bottom: var(--nf-space-8);
  }

  .job-title {
    margin: 0 0 var(--nf-space-2);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--nf-color-fg);
    line-height: 1.3;
  }

  .apply-form-section {
    margin-top: var(--nf-space-8);
  }

  .apply-form-card {
    background: #fff;
    border: 1px solid var(--nf-color-border);
    border-radius: var(--nf-radius-lg);
    box-shadow: var(--nf-shadow-sm);
    padding: var(--nf-space-4);
  }

  .apply-form-title {
    margin: 0 0 var(--nf-space-2);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--nf-color-fg);
  }

  .apply-form-description {
    margin: 0 0 var(--nf-space-3);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .apply-form-iframe {
    border-radius: var(--nf-radius-md);
    border: 1px solid var(--nf-color-border);
  }

  /* Floating Action Button */
  .fab-container {
    position: fixed;
    bottom: var(--nf-space-8);
    right: var(--nf-space-8);
    z-index: 1000;
  }

  .fab-container.center {
    left: 50%;
    right: auto;
    transform: translateX(-50%);
  }

  .fab-button {
    display: flex;
    align-items: center;
    gap: var(--nf-space-3);
    background: var(--nf-color-brand);
    color: white;
    border: none;
    border-radius: 50px;
    padding: var(--nf-space-4) var(--nf-space-6);
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(4, 102, 108, 0.3);
    transition: all 0.3s ease;
    min-width: 200px;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .fab-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .fab-button:hover::before {
    left: 100%;
  }

  .fab-button:hover {
    background: #035a5f;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 40px rgba(4, 102, 108, 0.4);
  }

  .fab-button:active {
    transform: translateY(-1px) scale(1.02);
  }

  .fab-text {
    white-space: nowrap;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  /* レスポンシブ対応 */
  @media (max-width: 1024px) {
    .job-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .job-detail-section {
      padding: var(--nf-space-6) 0;
    }

    .back-button-container {
      margin-bottom: var(--nf-space-4);
    }

    .job-content {
      margin-bottom: var(--nf-space-6);
    }

    .apply-form-section {
      margin-top: var(--nf-space-6);
    }

    .job-title {
      font-size: 1.4rem;
    }

    .apply-form-title {
      font-size: 1.15rem;
    }

    .fab-container {
      bottom: var(--nf-space-6);
      right: var(--nf-space-6);
    }

    
    .fab-container.center {
      left: 50%;
      right: auto;
    }

    .fab-button {
      padding: var(--nf-space-3) var(--nf-space-5);
      font-size: 1rem;
      min-width: 160px;
      gap: var(--nf-space-2);
    }
  }

  @media (max-width: 640px) {
    .job-detail-section {
      padding: var(--nf-space-5) 0;
    }

    .back-button-container {
      margin-bottom: var(--nf-space-3);
    }

    .job-content {
      margin-bottom: var(--nf-space-5);
    }

    .apply-form-section {
      margin-top: var(--nf-space-5);
    }

    .job-title {
      font-size: 1.3rem;
    }

    .apply-form-title {
      font-size: 1.1rem;
    }

    .fab-container {
      bottom: var(--nf-space-5);
      right: var(--nf-space-5);
    }

    .fab-container.center {
      left: 50%;
      right: auto;
    }

    .fab-button {
      padding: var(--nf-space-2) var(--nf-space-4);
      font-size: 0.95rem;
      min-width: 140px;
      gap: var(--nf-space-2);
    }
  }

  @media (max-width: 480px) {
    .job-detail-section {
      padding: var(--nf-space-4) 0;
    }

    .back-button-container {
      margin-bottom: var(--nf-space-3);
    }

    .job-content {
      margin-bottom: var(--nf-space-4);
    }

    .apply-form-section {
      margin-top: var(--nf-space-4);
    }

    .job-title {
      font-size: 1.25rem;
    }

    .apply-form-card {
      padding: var(--nf-space-3);
    }

    .apply-form-title {
      font-size: 1.1rem;
    }

    .apply-form-description {
      font-size: 0.85rem;
    }

    .apply-form-iframe {
      height: 500px;
    }

    .fab-container {
      bottom: var(--nf-space-4);
      right: var(--nf-space-4);
    }

    .fab-container.center {
      left: 50%;
      right: auto;
    }

    .fab-button {
      padding: var(--nf-space-2) var(--nf-space-3);
      font-size: 0.9rem;
      min-width: 120px;
      gap: var(--nf-space-2);
    }

    .fab-text {
      display: block;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 360px) {
    .job-detail-section {
      padding: var(--nf-space-3) 0;
    }

    .back-button-container {
      margin-bottom: var(--nf-space-2);
    }

    .job-content {
      margin-bottom: var(--nf-space-3);
    }

    .apply-form-section {
      margin-top: var(--nf-space-3);
    }

    .job-title {
      font-size: 1.15rem;
    }

    .apply-form-card {
      padding: var(--nf-space-2);
    }

    .apply-form-title {
      font-size: 1rem;
    }

    .apply-form-description {
      font-size: 0.8rem;
    }

    .apply-form-iframe {
      height: 450px;
    }

    .fab-container {
      bottom: var(--nf-space-3);
      right: var(--nf-space-3);
    }

    .fab-container.center {
      left: 50%;
      right: auto;
    }

    .fab-button {
      padding: var(--nf-space-2);
      font-size: 0.85rem;
      min-width: 100px;
      gap: var(--nf-space-1);
    }

    .fab-text {
      display: block;
      font-size: 0.8rem;
    }
  }
</style>


